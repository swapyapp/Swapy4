<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        android:id="@+id/receivedListItemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:background="#ffffff"
        android:transitionName="@string/Show_shift_received_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/progressBarReceivedListItemImg1"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ImageReceivedListItem"
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/male_circle_512" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/NameReceivedListItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_medium"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        tools:text="Muhammad Gamal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ShiftTimeReceivedListItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="@string/shift_time" />

                        <TextView
                            android:id="@+id/shiftDayReceivedListItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="Wednesday" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/shiftDateReceivedListItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        tools:text="18/10/2018" />

                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="0"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/progressBarReceivedListItemImg2"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/userImageReceivedListItem"
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/male_circle_512" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/UserNameReceivedListItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_medium"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        tools:text="Muhammad Gamal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/userShiftTimeReceivedListItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="@string/shift_time" />

                        <TextView
                            android:id="@+id/userShiftDayReceivedListItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="Wednesday" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/userShiftDateReceivedListItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        tools:text="18/10/2018" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>