<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        android:id="@+id/offAcceptedListItemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:background="#ffffff">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:id="@+id/offProgressBarAcceptedListItemImg1"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/offImageAcceptedListItem"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/male_circle_512" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/offNameAcceptedItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_medium"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:text="Muhammad Gamal" />

                <TextView
                    android:id="@+id/offDayAcceptedListItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semi_bold"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="Wednesday" />

                <TextView
                    android:id="@+id/offDateAcceptedListItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="18/10/2018" />

            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:id="@+id/offProgressBarAcceptedListItemImg2"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/offUserImageAcceptedListItem"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/male_circle_512" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/offUserNameAcceptedItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_medium"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:text="Muhammad Gamal" />

                <TextView
                    android:id="@+id/userOffDayAcceptedListItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semi_bold"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="Wednesday" />

                <TextView
                    android:id="@+id/userOffDateAcceptedListItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="18/10/2018" />

            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>