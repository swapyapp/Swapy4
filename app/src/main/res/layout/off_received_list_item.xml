<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        android:id="@+id/offReceivedListItemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:transitionName="@string/Show_off_received_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/offProgressBarReceivedListItemImg1"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/offImageReceivedListItem"
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/male_circle_512" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/offNameReceivedListItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_medium"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        tools:text="Muhammad Gamal" />

                    <TextView
                        android:id="@+id/offDayReceivedListItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_semi_bold"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="Wednesday" />

                    <TextView
                        android:id="@+id/offDateReceivedListItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        tools:text="18/10/2018" />

                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="0"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/offProgressBarReceivedListItemImg2"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/offUserImageReceivedListItem"
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/male_circle_512" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/offUserNameReceivedListItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_medium"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        tools:text="Muhammad Gamal" />

                    <TextView
                        android:id="@+id/userOffDayReceivedListItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_semi_bold"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="Wednesday" />

                    <TextView
                        android:id="@+id/userOffDateReceivedListItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        tools:text="18/10/2018" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!--<ImageView-->
                <!--android:id="@+id/rejectImgReceivedListItem"-->
                <!--android:layout_width="42dp"-->
                <!--android:layout_height="42dp"-->
                <!--android:layout_marginEnd="4dp"-->
                <!--android:src="@drawable/ic_reject" />-->

                <!--<ImageView-->
                <!--android:id="@+id/acceptedImgReceivedListItem"-->
                <!--android:layout_width="42dp"-->
                <!--android:layout_height="42dp"-->
                <!--android:layout_marginStart="8dp"-->
                <!--android:src="@drawable/ic_accept" />-->

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/withdrawOffSentListItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/btn_style_grey"
                    android:clickable="true"
                    android:fontFamily="@font/raleway_medium"
                    android:text="@string/reject"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button_text_size" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/acceptedImgOffReceivedListItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/btn_style"
                    android:clickable="true"
                    android:fontFamily="@font/raleway_medium"
                    android:text="@string/accept"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button_text_size" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>