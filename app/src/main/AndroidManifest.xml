<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.muhammadgamal.swapy">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ChangeBranch"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Activities.ChangeCompany"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.SignInActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ProfileActivityShift"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".Activities.NavDrawerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.SwapCreationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.ReceivedSwapRequest" />

        <service android:name=".Notifications.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".Activities.VerifyActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.SwapOffCreationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.AccountSittings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.SittingActivityBody"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ProfileActivityOff"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".Activities.ProfileActivityShiftReceivedRequest"
            android:theme="@style/AppTheme.ActionBar.Transparent2" />
        <activity
            android:name=".Activities.ProfileActivityOffReceivedRequest"
            android:theme="@style/AppTheme.ActionBar.Transparent2" />
        <activity
            android:name=".Activities.ProfileActivityShiftSentRequest"
            android:theme="@style/AppTheme.ActionBar.Transparent2" />
        <activity
            android:name=".Activities.ProfileActivityShiftAcceptedRequest"
            android:theme="@style/AppTheme.ActionBar.Transparent2" />
        <activity
            android:name=".Activities.ProfileActivityOffAcceptedRequest"
            android:theme="@style/AppTheme.ActionBar.Transparent2" />
        <activity
            android:name=".Activities.ProfileActivityOffSentRequest"
            android:theme="@style/AppTheme.ActionBar.Transparent2" />
        <activity
            android:name=".Activities.ResetPasswordActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".Activities.DeleteAccount"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Notifications.NotificationRequists"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.app.muhammadgamal.swapy.Notifications.NotificationRequists_NOTIFICATION_TASK" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>